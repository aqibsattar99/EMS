@model IEnumerable<EMSProject.Models.category>

@{
    ViewBag.Title = "Category List";
}



<!-- Modal Edit -->
<div class="modal fade" id="modal-cate-edit" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title">Edit Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>



            </div>
            <div class="modal-body">



                <div class="col-md-12">
                    <label> Name</label>
                    <input class="form-control" id="id" type="hidden" placeholder="" />
                    <input class="form-control" id="namecat" type="text" placeholder="" />


                </div>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btn-cate-edit"> Update </button>
            </div>
        </div>
    </div>

</div>



<div class="row">
    <div class="col-md-4">

        <div class="card">
            <div class="card-header">
                <h4>Create New Category</h4>
            </div>
            <div class="card-body">


                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Name</label>
                                <input class="form-control" id="namecat" />

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="card-footer">
                <button id="btn-cate-add" class="btn btn-primary">Create</button>
            </div>
        </div>

    </div>
    <div class="col-md-8">

        <div class="card">
            <div class="card-header">
                <h4>Category List</h4>
            </div>
            <div class="card-body">

                <table class="table table-bordered table-striped" id="tblcat">
                    <thead>
                        <tr>
                            <th>
                                <label>Sr</label>
                            </th>
                            <th>
                                <label>Name</label>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be populated here by JavaScript -->
                    </tbody>
                </table>


            </div>
        </div>


    </div>
</div>

